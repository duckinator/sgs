#!/bin/sh

GRADLE_VERSION=8.6

rm -rf "$HOME/sgs-gradle/" || exit $?

wget -O gradle.zip "https://services.gradle.org/distributions/gradle-${GRADLE_VERSION}-bin.zip" || exit $?
unzip gradle.zip || exit $?

mv "./gradle-${GRADLE_VERSION}" "$HOME/sgs-gradle" || exit $?

"$HOME/sgs-gradle/bin/gradle --version || exit $?
